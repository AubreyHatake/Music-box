<div class="d-flex align-items-center flex-column">
  <div class="col-md-6">
    <h2 class="profileFonts">Login</h2>

    <form class="form login-form">
      <div class="mt-auto p-2">
        <label for="email-login" class="profileFonts">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="mt-auto p-2">
        <label for="password-login" class="profileFonts">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="mt-auto p-2">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
    <div class="col-md-6">
      <h2 class="profileFonts">Sign Up</h2>

      <form class="form signup-form">
        <div class="mt-auto p-2">
          <label for="name-signup" class="profileFonts">Name:</label>
          <input class="form-input" type="text" id="name-signup" />
        </div>
        <div class="mt-auto p-2">
          <label for="email-signup" class="profileFonts">Email:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <div class="mt-auto p-2">
          <label for="password-signup" class="profileFonts">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="mt-auto p-2">
          <button class="btn btn-primary" type="submit" >Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>